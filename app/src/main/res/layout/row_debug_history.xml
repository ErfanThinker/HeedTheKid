<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/cyan_700"
    android:id="@+id/row_root"
    >
    <!---->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center_vertical">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/row_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="#fafafa"
            app:civ_border_width="2dp"
            app:civ_shadow="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_alignParentStart="true"
            app:civ_shadow_radius="10"
            app:civ_shadow_color="@color/textColorDark"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="start"
            android:layout_toRightOf="@id/row_icon"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/row_icon">

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:textColor="@color/textColorLight"
                android:fontFamily="sans-serif"
                android:text="MSG1" />

            <TextView
                android:id="@+id/battery_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:textColor="@color/textColorLight"
                android:fontFamily="sans-serif"
                android:text="battery" />

            <TextView
                android:id="@+id/acc_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:textColor="@color/textColorLight"
                android:fontFamily="sans-serif"
                android:text="battery" />

            <TextView
                android:id="@+id/encoder_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:textColor="@color/textColorLight"
                android:fontFamily="sans-serif"
                android:text="battery" />

        </LinearLayout>



    </RelativeLayout>



</androidx.cardview.widget.CardView>